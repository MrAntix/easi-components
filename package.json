{
  "name": "@ntix/easi-components",
  "version": "0.0.0-development",
  "description": "EASI (Eczema Area and Severity Index) Components",
  "main": "dist/index.cjs.js",
  "module": "dist/index.mjs",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/a-easi/a-easi.js",
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "lint": "eslint src --ext .ts --fix -f ./.eslint.formatter.js",
    "build": "stencil build --docs",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e",
    "test.coverage": "jest --coverage",
    "test.watch": "stencil test --spec --e2e --watchAll --screenshot",
    "commit": "npx git-cz",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "easi",
    "webcomponents"
  ],
  "author": "Anthony Johnston <npm@antix.co.uk> (http://antix.co.uk)",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@eslint/js": "^9.39.1",
    "@ntix/bind": "^1.3.2",
    "@stencil/core": "4.38.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "babel-jest": "^30.2.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "~9",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "npm-check-updates": "^19.1.2",
    "puppeteer": "24.32.1",
    "semantic-release": "^25.0.2",
    "typescript": "^5.9.3"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "babel-jest"
    },
    "testEnvironment": "node",
    "coverageProvider": "babel",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/index.ts$",
      "\\.(d|e2e|spec)\\.ts$"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testMatch": [
      "**/*.spec.ts"
    ],
    "moduleNameMapper": {
      "(.*)\\.js": "$1"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
